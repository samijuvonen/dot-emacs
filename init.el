(defun hugo-post (title)
  (interactive "sTitle: ")
  (org-insert-heading) (insert title)
  (insert (concat "\n"
                  "#+begin_src html :tangle /tmp/blog/content/post/" (replace-regexp-in-string " " "_" title) ".md\n"
                  "+++\n"
                  "categories = []\n"
                  "title = \"" title "\"\n"
                  "date = \"" (format-time-string "%Y-%m-%d %H:%M" (org-current-time)) "\n"
                  "+++\n"
                  "\n\n\n\n"
                  "#+end_src")))

